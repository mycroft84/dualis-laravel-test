{% extends "Templates/default.twig" %}

{% block content %}
    <h1>{{ post.title }}</h1>
    <h2>Kommentek</h2>

    <ul>
        {% for item in comments %}
            {{ item.email }} - {{ item.text }}
            <a href="{{ route('postsCommentEnabled',{comment: item.getKey()}) }}">
                {% if item.enabled %}
                    Letiltás
                {% else %}
                    Engedélyezés
                {% endif %}
            </a>
        {% endfor %}
    </ul>
{% endblock %}