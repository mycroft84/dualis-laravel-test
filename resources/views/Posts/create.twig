{% extends "Templates/default.twig" %}
{% import "_macros/forms.twig" as forms %}

{% block content %}

    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form method="post" action="{{ route('postsStore',{post: post.getKey()}) }}">
                {{ csrf_field() }}

                {{ forms.input('title','Title *',errors,post.title) }}
                {{ forms.input('lead','Lead *',errors,post.lead) }}
                {{ forms.textarea('text','Text *',errors,post.text) }}
                {{ forms.input('publish_date','Publish date *',errors,post.publish_date) }}

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>

{% endblock %}

