{% macro input(name,title,errors,value='',type = 'text') %}
    {% import "_macros/validation_errors.twig" as validation %}

    <div class="form-group{{ validation.addClass(errors,name) }}">
        <label for="{{ name }}">{{ title }}</label>
        <input type="{{ type }}" name="{{ name }}" value="{{ old(name)|default(value) }}" class="form-control" id="{{ name }}" placeholder="{{ title }}">

        {{ validation.message(errors,name) }}
    </div>
{% endmacro %}

{% macro select(name,title,options,errors,value = '') %}
    {% import "_macros/validation_errors.twig" as validation %}

    <div class="form-group{{ validation.addClass(errors,name) }}">
        <label for="{{ name }}">{{ title }}</label>
        <select name="{{ name }}" id="{{ name }}">
            {% for item in options %}
                <option value="{{ item.id }}"{% if item.id == value %} selected{% endif %}>{{ item.name }}</option>
            {% endfor %}
        </select>

        {{ validation.message(errors,name) }}
    </div>
{% endmacro %}

{% macro textarea(name,title,errors,value='') %}
    {% import "_macros/validation_errors.twig" as validation %}

    <div class="form-group{{ validation.addClass(errors,name) }}">
        <label for="{{ name }}">{{ title }}</label>
        <textarea name="{{ name }}" class="form-control" id="{{ name }}" placeholder="{{ title }}">{{ old(name)|default(value) }}</textarea>

        {{ validation.message(errors,name) }}
    </div>
{% endmacro %}