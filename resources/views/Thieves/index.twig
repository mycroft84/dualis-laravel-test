{% extends "Templates/default.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-4" style="margin-left: 100px;margin-top: 20px">
            <form method="get">
                <div class="form-group">
                    <input class="form-control" value="{{ term }}" style="float: left" name="term" type="text">
                    <button class="btn btn-info">
                        <span class="glyphicon glyphicon-send" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6" style="margin-left: 100px;margin-top: 20px">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>
                            <a href="{{ route('thievesIndex') }}?orderDir={{ orderDir }}{% if term %}&term={{ term }}{% endif %}">Name</a>
                        </td>
                        <td>
                            Action
                            <a class="btn btn-success" href="{{ route('thievesCreate') }}">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            </a>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    {% for item in thieves %}
                        <tr>
                            <td>{{ item.getKey() }}</td>
                            <td>{{ item.name }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ route('thievesUpdate',{thief: item.getKey()}) }}">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                </a>
                                <button data-url="{{ route('thiefDelete',{thief: item.getKey()}) }}" class="btn btn-danger removeItem">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}