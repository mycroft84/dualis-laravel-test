{% import "_macros/forms.twig" as forms %}

{% block content %}

    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form method="post" action="{{ route('carsStore',{car: car.getKey()}) }}">
                {{ csrf_field() }}

                {{ forms.input('name','Car name *',errors,car.name) }}
